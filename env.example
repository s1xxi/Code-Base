# MongoDB
MONGODB_URI=mongodb://localhost:27017/saas-boilerplate

# NextAuth
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-generate-with-openssl-rand-base64-32

# Google OAuth (optional)
GOOGLE_ID=your-google-client-id
GOOGLE_SECRET=your-google-client-secret

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe ONE-TIME Payment Price ID
# You need to create ONE product in Stripe with ONE price (one-time payment)
# Example: "Lifetime Access" product with $49 one-time price
# Then paste the price ID below (starts with price_)
NEXT_PUBLIC_STRIPE_PRICE_LIFETIME=price_your_lifetime_access_price_id
